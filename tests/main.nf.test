nextflow_pipeline {

    name "Test Workflow main.nf"
    tag "full"
    script "main.nf"

    test("Should run without failures") {

        when {
            params {
              remoteFile = "tests/testfile.txt"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 6
            assert workflow.trace.succeeded().size() == 6
        }

    }

    test("Should skip TEST_SUCCESS") {

        when {
            params {
              skip = "test_success"
              remoteFile = "tests/testfile.txt"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 5
            assert workflow.trace.succeeded().size() == 5
        }

    }

}
